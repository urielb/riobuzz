doctype html
html(lang="en")
  head
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content="Um projeto que pretende tornar possível a descoberta de combinações de linhas de ônibus para ir de um ponto na cidade do rio de janeiro a outro.")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    title= title

    meta(name="mobile-web-app-capable", content="yes")
    link(rel="icon", sizes="192x192", href="/images/touch/chrome-touch-icon-192x192.png")

    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(name="apple-mobile-web-app-title", content="RioBuzz")
    link(rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png")

    meta(name="msapplication-TileImage", content="/images/touch/ms-touch-icon-144x144-precomposed.png")
    meta(name="msapplication-TileColor", content="#3372DF")

    link(rel="stylesheet",href="/stylesheets/jquery-ui.min.css",type="text/css",media="screen")
    link(rel='stylesheet', href='/stylesheets/styles.css')

    style.
      #view-source {
        position: fixed;
        display: block;
        right: 0;
        bottom: 0;
        margin-right: 40px;
        margin-bottom: 40px;
        z-index: 900;
      }

  body
    block content
      container(style="width: 100%; height: 100%")
        #form(style="position:fixed; top: 3em; right: 3em; z-index: 3;")
          form
            input#startingPoint(value='-22.936569, -43.183814', type="hidden")
            input#arrivalPoint(value='-22.955238, -43.164689', type="hidden")
            button#search.mdl-button.mdl-button--raised.mdl-button--accent.mdl-js-button.mdl-js-ripple-effect(type='button') Buscar

        #mapContainer(style="position: relative; height: 100%; z-index: 1;")
          #map(style='position: relative; height: 100%; width: 100%;')

        #result(title="Trajetos Possíveis", style="display:none; z-index: 2;")

    script(src="/js/jquery-2.1.4.min.js")
    script(type='text/javascript', src='/js/jquery-ui.min.js', charset="utf-8")
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvX07lBusz-EBcdMIotV66YKbhas-DNEI")
    script(type='text/javascript', src='/js/commuting.js')